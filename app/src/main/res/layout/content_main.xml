<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ro.itcv.alex.remoteswitch.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/switchOneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current SwitchOne status is:"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/switchOneStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_below="@+id/switchOneText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/switchOneOn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Turn SwitchOne On"
        android:background="@color/colorButtonOn"
        android:onClick="turnSwitchOneOn"
        android:textColor="@color/colorButtonText"
        android:layout_below="@+id/switchOneStatus"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <Button
        android:id="@+id/switchOneOff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Turn SwitchOne Off"
        android:onClick="turnSwitchOneOff"
        android:background="@color/colorButtonOff"
        android:textColor="@color/colorButtonText"
        android:layout_below="@+id/switchOneOn"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23" />

</android.support.constraint.ConstraintLayout>
